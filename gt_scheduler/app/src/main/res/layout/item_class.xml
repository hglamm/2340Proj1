<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_border">

    <TextView
        android:id="@+id/classNameHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Class Name:  "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/classNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class Name"
        app:layout_constraintStart_toEndOf="@id/classNameHeader"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/instructorHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Instructor:  "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/classNameHeader"
        />

    <TextView
        android:id="@+id/instructorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructor Info"
        app:layout_constraintStart_toEndOf="@id/instructorHeader"
        app:layout_constraintTop_toTopOf="@id/instructorHeader"
        />
    <TextView
        android:id="@+id/daysHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Meeting Times:  "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/instructorHeader"
        />

    <TextView
        android:id="@+id/dayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="day Info"
        app:layout_constraintStart_toEndOf="@id/daysHeader"
        app:layout_constraintTop_toTopOf="@id/daysHeader"
        />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time Info"
        app:layout_constraintStart_toEndOf="@id/dayTextView"
        app:layout_constraintTop_toTopOf="@id/daysHeader"
        />

    <TextView
        android:id="@+id/locationHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Location:  "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/daysHeader"
        />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Info"
        app:layout_constraintStart_toEndOf="@id/locationHeader"
        app:layout_constraintTop_toTopOf="@id/locationHeader"
        />

    <ImageButton
        android:id="@+id/classEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        app:layout_constraintEnd_toStartOf="@+id/classDeleteButton"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/classDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>